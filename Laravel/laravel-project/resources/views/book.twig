{% extends "layout.twig" %}

{% block title %}Books{% endblock %}

{% block content %}
  {% set flashes = app.session.flashbag.get('status') %}
  {% if flashes|length > 0 %}
    {% for message in flashes %}
      <div class="alert alert-success">{{ message }}</div>
    {% endfor %}
  {% endif %}

  {% if errors and errors.any %}
    <div class="alert alert-danger">
      <ul class="mb-0">
        {% for error in errors.all %}
          <li>{{ error }}</li>
        {% endfor %}
      </ul>
    </div>
  {% endif %}

  <div class="mb-4">
    <form method="GET" action="{{ route('books.index') }}" class="row g-2">
      <div class="col-sm-8 col-md-10">
        <input type="text" class="form-control" name="q" value="{{ q }}" placeholder="Search by book name...">
      </div>
      <div class="col-sm-4 col-md-2 d-grid gap-2 d-md-block">
        <button class="btn btn-primary w-100" type="submit">Search</button>
      </div>
    </form>
  </div>

  {% if q %}
    <h2 class="h5">Results for: "{{ q }}"</h2>
    {% if results is not empty and results|length > 0 %}
      <ul class="list-group mb-4">
        {% for b in results %}
          <li class="list-group-item">{{ b.book_name }}</li>
        {% endfor %}
      </ul>
    {% else %}
      <div class="alert alert-secondary mb-4">Nothing found</div>
    {% endif %}
  {% endif %}

  <h2 class="h5 mt-4">Popular (horizontal cards)</h2>
  <div class="row g-3 mb-4">
    {% for b in showcase %}
      <div class="col-12 col-md-6">
        <div class="card shadow-sm" style="min-height: 110px;">
          <div class="card-body d-flex align-items-center">
            <div class="w-100">
              <div class="fw-semibold">{{ b.book_name }}</div>
              <div class="text-muted small">No cover</div>
            </div>
          </div>
        </div>
      </div>
    {% else %}
      <div class="col-12"><div class="alert alert-light">No books to show</div></div>
    {% endfor %}
  </div>

  <h2 class="h5 mt-4">Collection (vertical cards)</h2>
  <div class="row g-3">
    {% for b in showcase %}
      <div class="col-6 col-md-3 col-lg-2">
        <div class="card shadow-sm" style="height: 220px;">
          <div class="card-body d-flex">
            <div class="align-self-end">
              <div class="fw-semibold">{{ b.book_name }}</div>
              <div class="text-muted small">No cover</div>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>

  <hr class="my-4"/>

  <h2 class="h5">Add a new book</h2>
  <form method="POST" action="{{ route('books.store') }}" class="mb-3">
    {{ csrf_field()|raw }}
    <div class="row g-2 align-items-center">
      <div class="col-auto">
        <label for="book_name" class="col-form-label">Book name</label>
      </div>
      <div class="col-auto">
        <input type="text" id="book_name" name="book_name" class="form-control" required>
      </div>
      <div class="col-auto">
        <button type="submit" class="btn btn-secondary">Add</button>
      </div>
    </div>
  </form>

  <ul class="list-group">
    {% for b in showcase %}
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <span>{{ b.book_name }}</span>
        <form method="POST" action="{{ route('books.destroy', {id: b.id}) }}" onsubmit="return confirm('Are you sure?')">
          {{ csrf_field()|raw }}
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
        </form>
      </li>
    {% endfor %}
  </ul>
{% endblock %}
