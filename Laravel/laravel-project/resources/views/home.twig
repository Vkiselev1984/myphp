{% extends "layout.twig" %}

{% block title %}Library{% endblock %}

{% block content %}
  <div class="mb-4">
    <form method="GET" action="{{ route('home') }}" class="row g-2">
      <div class="col-sm-8 col-md-10">
        <input type="text" class="form-control" name="q" value="{{ q }}" placeholder="Searching...">
      </div>
      <div class="col-sm-4 col-md-2 d-grid gap-2 d-md-block">
        <button class="btn btn-primary w-100" type="submit">Search</button>
      </div>
    </form>
  </div>

  {% if q %}
    <h2 class="h5">Results: "{{ q }}"</h2>
    {% if results is not empty and results|length > 0 %}
      <ul class="list-group mb-4">
        {% for b in results %}
          <li class="list-group-item">{{ b.book_name }}</li>
        {% endfor %}
      </ul>
    {% else %}
      <div class="alert alert-secondary mb-4">No resilts for this selection</div>
    {% endif %}
  {% endif %}

  <h2 class="h5 mt-4">Popular</h2>
  <div class="row g-3 mb-4">
    {% for b in showcase %}
      <div class="col-12 col-md-6">
        <div class="card shadow-sm" style="min-height: 110px;">
          <div class="card-body d-flex align-items-center">
            <div class="w-100">
              <div class="fw-semibold">{{ b.book_name }}</div>
              <div class="text-muted small">No image</div>
            </div>
          </div>
        </div>
      </div>
    {% else %}
      <div class="col-12"><div class="alert alert-light">No books</div></div>
    {% endfor %}
  </div>

  <h2 class="h5 mt-4">Selection</h2>
  <div class="row g-3">
    {% for b in showcase %}
      <div class="col-6 col-md-3 col-lg-2">
        <div class="card shadow-sm" style="height: 220px;">
          <div class="card-body d-flex">
            <div class="align-self-end">
              <div class="fw-semibold">{{ b.book_name }}</div>
              <div class="text-muted small">No image</div>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
{% endblock %}
