{% extends "layout.twig" %}

{% block title %}Library{% endblock %}

{% block content %}
  <div class="mb-3">
    <form method="GET" action="{{ route('home') }}" class="row g-2">
      <div class="col-sm-8 col-md-10">
        <input type="text" class="form-control" name="q" value="{{ q }}" placeholder="search book by title">
      </div>
      <div class="col-sm-4 col-md-2 d-grid gap-2 d-md-block">
        <button class="btn btn-primary w-100" type="submit">Search</button>
      </div>
    </form>
  </div>

  <section class="mb-4" style="height: 100vh; min-height: 420px; background: linear-gradient(135deg, #0f172a, #4f46e5); color: #fff; border-radius: .5rem; display: flex; align-items: center; justify-content: center; text-align: center;">
    <div class="p-3">
      <h1 class="display-4 fw-bold">Welcome our readers to the virtual library</h1>
      <p class="lead mt-2" style="opacity:.9;">Explore the collection and find your next great read</p>
    </div>
  </section>

  {% if q %}
    <h2 class="h5">Results: "{{ q }}"</h2>
    {% if results is not empty and results|length > 0 %}
      <ul class="list-group mb-4">
        {% for b in results %}
          <li class="list-group-item">{{ b.book_name }}</li>
        {% endfor %}
      </ul>
    {% else %}
      <div class="alert alert-secondary mb-4">We have not this book in our library</div>
    {% endif %}
  {% endif %}
{% endblock %}
