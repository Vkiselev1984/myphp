{% extends "layout.twig" %}

{% block title %}Пользователи{% endblock %}

{% block content %}
    {% set flashes = app.session.flashbag.get('status') %}
    {% if flashes|length > 0 %}
        {% for message in flashes %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
    {% endif %}

    {% if errors and errors.any %}
        <div class="alert alert-danger">
            <ul class="mb-0">
                {% for error in errors.all %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    <h1 class="mb-3">Users</h1>

    <form method="POST" action="{{ route('users.store') }}" class="mb-3">
        {{ csrf_field()|raw }}
        <div class="row g-2 align-items-center">
            <div class="col-auto">
                <label for="first_name" class="col-form-label">Name</label>
            </div>
            <div class="col-auto">
                <input type="text" id="first_name" name="first_name" class="form-control" required>
            </div>
            <div class="col-auto">
                <label for="last_name" class="col-form-label">Last name</label>
            </div>
            <div class="col-auto">
                <input type="text" id="last_name" name="last_name" class="form-control" required>
            </div>
            <div class="col-auto">
                <label for="email" class="col-form-label">Email</label>
            </div>
            <div class="col-auto">
                <input type="email" id="email" name="email" class="form-control" required>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-secondary">Add</button>
            </div>
        </div>
    </form>

    <ul class="list-group">
        {% for user in users %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span>{{ user.first_name }} {{ user.last_name }} — {{ user.email }}</span>
                <form method="POST" action="{{ route('users.destroy', {id: user.id}) }}" onsubmit="return confirm('Are you sure?')">
                    {{ csrf_field()|raw }}
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                </form>
            </li>
        {% else %}
            <li class="list-group-item">List is empty</li>
        {% endfor %}
    </ul>
{% endblock %}
